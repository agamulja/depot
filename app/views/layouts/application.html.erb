<!DOCTYPE html>
<html>
<head>
  <title>BluMoon</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
	<div id="divLogoBG">
		<div id="divLogo">
			<%= image_tag("blumoon.jpg") %>
			<%= @page_title || "BluMoon" %>
		</div>
		<div id="divHeader">
			<div id="ulHeader">
				<li><%= link_to "Home", store_path %></li>
				<li><%= link_to "Rings", browse_rings_path %></li>
				<li><%= link_to 'Bracelets', browse_bracelets_path %></li>
				<li><%= link_to 'Earrings', browse_earrings_path %></li>
				<li><%= link_to 'Necklaces', browse_necklaces_path %></li>
			</div>
			<div id="side">
				<% if @cart %>
					<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
						<%= render @cart %>
					<% end %>
				<% end %>				
			</div>
		</div>
	</div>
	<div id="columns">
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
